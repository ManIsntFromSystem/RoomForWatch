<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/appBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/appBlack</item>
        <item name="backgroundTint">@color/appBlack</item>
        <item name="backgroundColor">@color/appBlack</item>
    </style>

    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/appBlack</item>
        <item name="colorOnPrimary">#FFF</item>
    </style>
</resources>