<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginStart="8dp"
  android:layout_marginEnd="8dp">

  <View
    android:id="@+id/imgSpaceFiller"
    android:layout_width="@dimen/card_thin_movie_width"
    android:layout_height="@dimen/card_thin_movie_height"
    android:layout_alignParentTop="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/bg_item_space_filler" />

  <TextView
    android:id="@+id/txtSpaceFiller"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="20dp"
    android:textSize="16sp"
    android:background="@drawable/bg_item_space_filler"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imgSpaceFiller" />

  <Space
    android:id="@+id/viewSpace"
    android:layout_width="match_parent"
    android:layout_height="4dp"
    app:layout_constraintTop_toBottomOf="@+id/txtSpaceFiller"/>

</androidx.constraintlayout.widget.ConstraintLayout>